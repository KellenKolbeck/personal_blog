<h1>Blog-Post Page</h1>

<h3><%=@post.title %></h3>

<%= @post.body %>
        | <%= link_to 'Edit', edit_post_path(@post) %>
        | <%= link_to 'Delete', post_path(@post), :data => {:confirm => "Are you sure?", :method => "delete"}%>

<h3>Tags: </h3>
<ul>
  <% @post.tags.each do |tag| %>
    <li><%= link_to tag.name, tag_path(tag) %> | <%= link_to 'Edit Tag', edit_post_tag_path(@post, tag) %></li>
    <% end %>

</ul>

<h4><%= link_to "Add A Tag", new_post_tag_path(@post) %></h4>
